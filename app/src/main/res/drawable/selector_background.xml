<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/>
            <stroke android:width="2dp" android:color="#FF0000"/> <!-- Change to your desired color -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/>
            <stroke android:width="2dp" android:color="#00000000"/> <!-- Transparent color for unselected state -->
        </shape>
    </item>
</selector>
